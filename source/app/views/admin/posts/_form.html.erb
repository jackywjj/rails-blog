<%= form_for([:admin, @post], html: {class: "form-horizontal", :multiple => true}) do |f| %>
    <% if @post.errors.any? %>
    <div class="error-div">
        <div class="alert alert-error">
        <% @post.errors.each do |label, msg| %>
            <%= msg %><br />
        <% end %>
        </div>
    </div>
    <% end %>
    <div class="form-group">
        <%= f.label :title, "Category", class: "col-lg-3 control-label" %>
        <div class="col-lg-2">
		  <%= f.collection_select(:category_id, 
				Category.all, :id, :title, {:prompt => false, :selected => @category_id}, {:class => "form-control"}) %>
        </div>
    </div>
    <div class="form-group">
        <%= f.label :title, "Title", class: "col-lg-3 control-label" %>
        <div class="col-lg-5">
            <%= f.text_field :title, class:"form-control" %>
        </div>
    </div>
    <div class="form-group">
        <%= f.label :title, "Image", class: "col-lg-3 control-label" %>
        <div class="col-lg-5">
            <%= f.file_field :post_image %>
            <% if @post.post_image? %>
            <img src="<%= '' + @post.post_image.url(:medium) + '' %>">
            <% end %>
        </div>
    </div>
    <div class="form-group">
        <%= f.label :title, "Content", class: "col-lg-3 control-label" %>
        <div class="col-lg-8">
            <%= f.text_area :content, class:"form-control", rows:16 %>
        </div>
    </div>
    <div class="form-group">
        <div class="col-lg-offset-3 col-lg-6">
            <%= f.submit "Submit", class:"btn btn-primary" %>
        </div>
    </div>
<% end %>