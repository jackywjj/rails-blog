<h1>Essay <small>view</small></h1>
<div class="clearfix">
	<div class="pull-right">
		<%= link_to 'Modify', edit_admin_post_path(@post, :category_id => @category_id), {:class=>'btn btn-primary'} %>
		<%= link_to 'Back', admin_posts_path(:category_id => @category_id), {:class=>'btn btn-primary'} %>
	</div>
</div>
<div class="table-responsive">
	<div class="row">
		<div class="col-lg-12">
			<% if notice %><div class="alert alert-success"><%= notice %></div><% end %>
			<table class="table table-hover table-bordered">
			<tbody>
			<tr>
				<th class="col-lg-3">
					<%= label_tag nil, "Title", class: "pull-right" %>
				</th>
				<td><%= @post.title %></td>
			</tr>
			<tr>
				<th class="col-lg-3">
					<%= label_tag nil, "Category", class: "pull-right" %>
				</th>
				<td><%= @post.category.title %></td>
			</tr>
			<tr>
				<th class="col-lg-3">
					<%= label_tag nil, "Image", class: "pull-right" %>
				</th>
				<td>
					<% if @post.post_image? %>
					<img src="<%= '' + @post.post_image.url(:medium) + '' %>">
					<% end %>
				</td>
			</tr>
			<tr>
				<th class="col-lg-3">
					<%= label_tag nil, "Content", class: "pull-right" %>
				</th>
				<td><%= @post.content_md.html_safe() %></td>
			</tr>
			</tbody>
			</table>
		</div>
	</div>
</div>
