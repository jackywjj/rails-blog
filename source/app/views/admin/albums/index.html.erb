<h2>Album <small>list</small></h2>
<div class="clearfix">
	<%= link_to 'Create new album', new_admin_album_path, {:class=>'btn btn-primary pull-right'} %>
</div>
<div class="table-responsive">
	<table class="table table-striped table-hover">
	<thead>
		<tr>
			<th>ID</th>
			<th>Title</th>
			<th>Created At</th>
			<th>Status</th>
			<th colspan="3">&nbsp;</th>
		</tr>
	</thead>
	<tbody>
		<% @albums.each do |album| %>
		<tr>
			<td><%= album.id %></td>
			<td><%= album.title %></td>
			<td><%= album.created_time %></td>
			<td>
		  	<% if album.status? %>
		  	<%= link_to 'Enable', '/admin/albums/change/' + album.id.to_s() %>
		  	<% else %>
		  	<%= link_to 'Disable', '/admin/albums/change/' + album.id.to_s() %>
		  	<% end %>
		  </td>
			<td><%= link_to 'View', admin_album_path(album) %></td>
			<td><%= link_to 'Modify', edit_admin_album_path(album) %></td>
			<td><%= link_to 'Delete', admin_album_path(album), method: :delete, data: { confirm: 'Are you sure?' } %></td>
		</tr>
		<% end %>
	</tbody>
	</table>
</div>