<h1>Users <small>user list</small></h1>
<div class="clearfix">
	<%= link_to 'Create new user', new_admin_user_path, {:class=>'btn btn-primary pull-right'} %>
</div>
<div class="table-responsive">
	<table class="table table-striped table-hover">
		<thead>
		<tr>
			<th>ID</th>
			<th>User Name</th>
			<th>Created At</th>
			<th colspan="3">&nbsp;</th>
		</tr>
		</thead>
		<tbody>
		<% @users.each do |user| %>
		<tr>
			<td><%= user.id %></td>
			<td><%= user.user_name %></td>
			<td><%= user.created_at %></td>
			<td><%= link_to 'View', admin_user_path(user) %></td>
			<td><%= link_to 'Modify', edit_admin_user_path(user) %></td>
			<td><%= link_to 'Delete', admin_user_path(user), method: :delete, data: { confirm: 'Are you sure?' } %></td>
		</tr>
		<% end %>
		</tbody>
	</table>
</div>