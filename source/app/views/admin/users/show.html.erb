<h1>User <small>view</small></h1>
<div class="clearfix">
	<div class="pull-right">
		<%= link_to 'Modify', edit_admin_user_path(@user), {:class=>'btn btn-primary'} %>
		<%= link_to 'Back', admin_users_path, {:class=>'btn btn-primary'} %>
	</div>
</div>
<div class="table-responsive">
	<div class="row">
		<div class="col-lg-12">
			<% if notice %><div class="alert alert-success"><%= notice %></div><% end %>
			<table class="table table-hover table-bordered">
			<tbody>
			<tr>
				<th class="col-lg-3"><%= label_tag nil, "User Name", class: "pull-right" %></th>
				<td class="col-lg-5"><%= @user.user_name %></td>
			</tr>
			<tr>
				<th class="col-lg-3"><%= label_tag nil, "User Passowrd", class: "pull-right" %></th>
				<td class="col-lg-5"><%= @user.user_pass %></td>
			</tr>
			</tbody>
			</table>
		</div>
	</div>
</div>