<%= form_for([:admin, @user], html: {class: "form-horizontal"}) do |f| %>
    <% if @user.errors.any? %>
    <div class="error-div">
        <div class="alert alert-error">
        <% @user.errors.each do |label, msg| %>
            <%= msg %><br />
        <% end %>
        </div>
    </div>
    <% end %>
    <div class="form-group">
        <%= f.label :user_name, "User Name", class: "col-lg-3 control-label" %>
        <div class="col-lg-5"><%= f.text_field :user_name, class:"form-control" %></div>
    </div>
    <div class="form-group">
        <%= f.label :user_pass, "User Password", class: "col-lg-3 control-label" %>
        <div class="col-lg-5"><%= f.password_field :user_pass, class:"form-control" %></div>
    </div>
    <div class="form-group">
        <div class="col-lg-offset-3 col-lg-10"><%= f.submit "Submit", class:"btn btn-primary" %></div>
    </div>
<% end %>