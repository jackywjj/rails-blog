<%= form_for([:admin, @category], html: {class: "form-horizontal"}) do |f| %>
    <% if @category.errors.any? %>
    <div class="error-div">
        <div class="alert alert-error">
        <% @category.errors.each do |label, msg| %>
            <%= msg %><br />
        <% end %>
        </div>
    </div>
    <% end %>
    <div class="form-group">
        <%= f.label :title, "Title", class: "col-lg-3 control-label" %>
        <div class="col-lg-5">
            <%= f.text_field :title, class:"form-control" %>
        </div>
    </div>
    <div class="form-group">
		  <div class="col-lg-offset-3 col-lg-10"><%= f.submit "Submit", class:"btn btn-primary" %></div>
    </div>
<% end %>