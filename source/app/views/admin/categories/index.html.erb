<h1>Categories <small>list</small></h1>
<div class="clearfix">
	<%= link_to 'Create new category', new_admin_category_path, {:class=>'btn btn-primary pull-right'} %>
</div>
<div class="table-responsive">
	<table class="table table-hover table-striped">
		<thead>
		<tr>
		  <th>ID</th>
		  <th>Title</th>
		  <th>Created At</th>
		  <th>Status</th>
		  <th colspan="3">&nbsp;</th>
		</tr>
		</thead>
		<tbody>
		<% @categories.each do |category| %>
		<tr>
		  <td><%= category.id %></td>
		  <td><%= category.title %></td>
		  <td><%= category.created_time %></td>
		  <td>
		  	<% if category.status? %>
		  	<%= link_to 'Enable', '/admin/categories/change/' + category.id.to_s() %>
		  	<% else %>
		  	<%= link_to 'Disable', '/admin/categories/change/' + category.id.to_s() %>
		  	<% end %>
		  </td>
		  <td><%= link_to 'View', admin_category_path(category) %></td>
		  <td><%= link_to 'Modify', edit_admin_category_path(category) %></td>
		  <td><%= link_to 'Delete', admin_category_path(category), method: :delete, data: { confirm: 'Are you sure?' } %></td>
		</tr>
		<% end %>
		</tbody>
	</table>
</div>
