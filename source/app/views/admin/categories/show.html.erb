<h1>Categories <small>view</small></h1>
<div class="clearfix">
	<div class="pull-right">
		<%= link_to 'Modify', edit_admin_category_path(@category), {:class=>'btn btn-primary'} %>
		<%= link_to 'Back', admin_categories_path, {:class=>'btn btn-primary'} %>
	</div>
</div>
<div class="table-responsive">
	<div class="row">
		<div class="col-lg-12">
			<% if notice %><div class="alert alert-success"><%= notice %></div><% end %>
			<table class="table table-hover table-bordered">
			<tbody>
			<tr>
				<th class="col-lg-3"><%= label_tag nil, "Title", class: "pull-right" %></th>
				<td><%= @category.title %></td>
			</tr>
			</tbody>
			</table>
		</div>
	</div>
</div>